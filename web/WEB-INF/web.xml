<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindShipmentServelt</servlet-name>
        <servlet-class>controller.FindShipmentServelt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddShipmentServlet</servlet-name>
        <servlet-class>controller.AddShipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findOrdersServlet</servlet-name>
        <servlet-class>controller.findOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindOrdersServlet</servlet-name>
        <servlet-class>controller.FindOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>controller.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindShipmentServelt</servlet-name>
        <url-pattern>/FindShipmentServelt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddShipmentServlet</servlet-name>
        <url-pattern>/AddShipmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findOrdersServlet</servlet-name>
        <url-pattern>/findOrdersServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindOrdersServlet</servlet-name>
        <url-pattern>/FindOrdersServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/AddToCartServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
